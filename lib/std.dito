# time :

let UNIX_EPOCH = 0x019DB1DED53E8000
let UNIX_DAY   = 86400
let UNIX_HOUR  = 3600
let UNIX_MIN   = 60

# return a string representation of the current time.
def strtime(t) {
    let mut secs = (t - UNIX_EPOCH) % UNIX_DAY
    if secs < 0 {
        secs += UNIX_DAY
    }
    let tm_hour = secs // 3600
    let tm_min  = secs // 60 % 60
    let tm_sec  = secs % 60
    return join([tm_hour, tm_min, tm_sec], ":")
}