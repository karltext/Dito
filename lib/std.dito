# random :
# Builds on top of the built in deftion `rand`.

# return random int where result <= a
let randint = def(a) -> int(rand() * a)

# return a random choice from a iterable object.
let choice  = def(it) -> it[int(rand() * len(it))]

# generate a random number between a and b.
let uniform = def(a, b) -> (a + ((abs(a) if a<0 else 0) + b) * rand())

def shuffle(it) {
    let maxIndex = len(it) - 1
    for i in range(0, maxIndex) {
        swap(it, i, randint(maxIndex))
    }
}

def shuffled(it) {
    let arr = copy(it)
    shuffle(arr)
    return arr
}

